<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/REDbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF0000"
        android:text="RED"/>
    <Button
        android:id="@+id/ORANGEbutton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ffa600"
        android:text="ORANGE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/YELLOWbutton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ffff00"
        android:text="YELLOW"
        android:layout_marginLeft="140dp"
        app:layout_constraintLeft_toRightOf="@+id/ORANGEbutton"/>
    <Button
        android:id="@+id/GREENbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00fe00"
        android:text="GREEN"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ORANGEbutton"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/BLUEbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#0000ff"
        android:text="BLUE"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ORANGEbutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/INDIGObutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:background="#4a0084"
        android:text="INDIGO"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ORANGEbutton" />
    <Button
        android:id="@+id/VIOLETbutton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#EF82EF"
        android:text="VIOLET"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>